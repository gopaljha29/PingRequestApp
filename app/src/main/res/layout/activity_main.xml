<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/iptext"

            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textAlignment="center"

            android:padding="10dp" android:background="?attr/panelBackground" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="191dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="IP Address"
            style="@android:style/Widget.AutoCompleteTextView" android:inputType="" android:autofillHints=""/>
    <Button
            android:text="@string/ping"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="362dp"
            tools:layout_editor_absoluteX="161dp"
            android:id="@+id/pingBtn"
            android:layout_marginTop="88dp"
            android:layout_below="@+id/iptext"
            android:layout_centerHorizontal="true"
            android:visibility="visible" style="@style/Widget.AppCompat.Button" android:background="#3A5DB7"/>
</RelativeLayout>